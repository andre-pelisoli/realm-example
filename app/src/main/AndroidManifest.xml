<?xml version="1.0" encoding="utf-8"?>
<manifest package="br.com.pelisoli.realm"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".main.MainApplication">
        <activity android:name="br.com.pelisoli.realm.activity.MainActivity"
                  android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="br.com.pelisoli.realm.activity.RegisterActivity"
                  android:parentActivityName="br.com.pelisoli.realm.activity.MainActivity"/>

        <activity android:name="br.com.pelisoli.realm.activity.SearchActivity"
                  android:parentActivityName="br.com.pelisoli.realm.activity.MainActivity"/>
    </application>

</manifest>
